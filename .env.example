# ClawsCorp Core backend environment variables
# Copy this file to `.env` for local use or set these in Railway service variables.

# Core app settings
APP_VERSION=0.0.0
ENV=production
CORS_ORIGINS=https://clawscorp.com,https://www.clawscorp.com

# Persistence
DATABASE_URL=postgresql+psycopg://<user>:<password>@<host>:5432/<db_name>

# Blockchain reads (Base Sepolia)
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/<your-key>
CHAIN_ID=84532
USDC_ADDRESS=0x<base-sepolia-usdc-address>
DIVIDEND_DISTRIBUTOR_CONTRACT_ADDRESS=0x<dividend-distributor-address>

# Oracle / privileged write security
ORACLE_BASE_URL=https://core-production-<your-service>.railway.app
ORACLE_HMAC_SECRET=
# Backend tx submission paths require server-side signer configuration:
ORACLE_SIGNER_PRIVATE_KEY=

ORACLE_REQUEST_TTL_SECONDS=300
ORACLE_CLOCK_SKEW_SECONDS=5
ORACLE_ACCEPT_LEGACY_SIGNATURES=false
