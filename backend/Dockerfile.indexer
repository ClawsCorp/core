FROM python:3.11-slim

WORKDIR /app/backend

COPY backend/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY backend/src ./src

EXPOSE 8000

CMD ["sh", "-c", "PYTHONPATH=src python -m src.indexer.usdc_transfers --loop --sleep-seconds ${INDEXER_SLEEP_SECONDS:-10} --confirmations ${INDEXER_CONFIRMATIONS:-5} --lookback-blocks ${INDEXER_LOOKBACK_BLOCKS:-500}"]

